{
  "name": "true-map",
  "version": "0.1.0",
  "private": true,
  "description": "TRUE MAP MVP - desktop offline mapping tool",
  "main": "dist-electron/main.js",
  "author": "Matt Dougherty",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm:watch:main\" \"npm:start:renderer\" \"npm:start:electron\"",
    "watch:main": "tsc -p tsconfig.electron.json -w",
    "start:renderer": "vite",
    "start:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "rimraf dist dist-electron && tsc -p tsconfig.electron.json && vite build",
    "build:app": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.true.map",
    "productName": "TrueMap",
    "files": [
      "dist/**",
      "dist-electron/**",
      "assets/**"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "directories": {
      "buildResources": "build"
    }
  },
  "dependencies": {
    "@ngageoint/geopackage": "^4.0.4",
    "@rjsf/core": "^5.18.1",
    "@rjsf/validator-ajv8": "^5.18.1",
    "@tmcw/togeojson": "^5.8.1",
    "@turf/turf": "^6.5.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "cesium": "^1.135.0",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jszip": "^3.10.1",
    "ol": "^10.2.1",
    "olcs": "^2.22.1",
    "pdfkit": "^0.14.0",
    "proj4": "^2.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "vite-plugin-cesium": "^1.2.23",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.7",
    "wait-on": "^7.2.0"
  }
}
